{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@zephyr/config/nextjs.config.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@root/*": ["./*"],
      "@zephyr/*": ["../../packages/*/src"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
